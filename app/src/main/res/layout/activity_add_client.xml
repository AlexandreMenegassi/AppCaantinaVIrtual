<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddClientActivity">

    <EditText
        android:id="@+id/addClientNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome Completo" />

    <EditText
        android:id="@+id/addClientTelephoneId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/add_money" />

        <EditText
            android:id="@+id/addClientMoneyId"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:hint="R$: SALDO"
            android:inputType="number" />


    </TableRow>

    <Button
        android:id="@+id/addBtnClientId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADICIONAR CLIENTE" />

    <ImageView
        android:id="@+id/btnVoltarId"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/btn_voltar" />

</LinearLayout>